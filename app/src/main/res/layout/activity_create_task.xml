<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main_drawer_layout"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:drop="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_main">

            <include
                android:id="@+id/top_menu"
                layout="@layout/toolbar" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/top_menu">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_main"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1.6"
                            android:gravity="end"
                            android:text="@string/task_type"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <com.emms.ui.DropEditText
                            android:id="@+id/task_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            drop:drawableRight="@mipmap/drop_down"
                            drop:dropMode="flow_parent"
                            drop:hint="@string/select"
                            drop:hintColor="@color/hint_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/task_subtype_name_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1.6"
                            android:gravity="end"
                            android:text="@string/task_subtype_name"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <com.emms.ui.DropEditText
                            android:id="@+id/task_subtype"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            drop:drawableRight="@mipmap/drop_down"
                            drop:dropMode="flow_parent"
                            drop:hint="@string/select"
                            drop:hintColor="@color/hint_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1.6"
                            android:gravity="end"
                            android:text="@string/creater"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_bg_shape"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/create_task"
                                    style="?android:attr/textViewStyle"
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:height="40dip"
                                    android:background="@null"
                                    android:editable="false"
                                    android:hint="@string/scan"
                                    android:textColor="@color/text_color"
                                    android:textColorHint="@color/hint_color"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="2dip"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="2dip"
                                    android:paddingRight="2dip"
                                    android:src="@mipmap/scan" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/create_task_action"
                                android:layout_width="43dp"
                                android:layout_height="43dp"
                                android:layout_alignParentRight="true"
                                android:background="@color/transparent"
                                android:contentDescription="@null" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1.6"
                            android:gravity="end"
                            android:text="@string/group"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <com.emms.ui.DropEditText
                            android:id="@+id/group"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            drop:drawableRight="@mipmap/drop_down"
                            drop:dropMode="flow_parent"
                            drop:hint="@string/select"
                            drop:hintColor="@color/hint_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1.6"
                            android:gravity="end"
                            android:text="@string/equipment_name"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <com.emms.ui.DropEditText
                            android:id="@+id/device_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            drop:drawableRight="@mipmap/drop_down"
                            drop:dropMode="flow_parent"
                            drop:hint="@string/select"
                            drop:hintColor="@color/hint_color" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1.6"
                            android:gravity="end"
                            android:text="@string/equipment_num"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_bg_shape"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/device_num"
                                    style="?android:attr/textViewStyle"
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:height="40dip"
                                    android:background="@null"
                                    android:hint="@string/scan"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textColor="@color/text_color"
                                    android:textColorHint="@color/hint_color"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="2dip"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="2dip"
                                    android:paddingRight="2dip"
                                    android:src="@mipmap/scan" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/device_num_action"
                                android:layout_width="43dp"
                                android:layout_height="43dp"
                                android:layout_alignParentRight="true"
                                android:background="@color/transparent"
                                android:contentDescription="@null" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="13dp"
                            android:layout_weight="1.6"
                            android:gravity="end"
                            android:text="@string/task_description"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <RelativeLayout
                            android:id="@+id/edit_resume"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_weight="3"
                            android:background="@android:color/white"
                            android:padding="10dp">

                            <EditText
                                android:id="@+id/edit_task_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/task_description_hint"
                                android:textColor="@color/text_color"
                                android:textColorHint="@color/hint_color"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/sure"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/yellow"
                        android:padding="2dp"
                        android:text="@string/warning_message_confirm"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </FrameLayout>
    <include layout="@layout/activity_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"/>
</android.support.v4.widget.DrawerLayout>