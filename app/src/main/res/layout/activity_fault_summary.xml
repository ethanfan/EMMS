<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"></include>
    <TextView
        android:id="@+id/task_id_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="26dp"
        android:text="@string/task_id"
        android:layout_alignRight="@+id/fault_description_tag"
        android:layout_toRightOf="@+id/sequence_number"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/task_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/task_id_tag"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/task_id_tag"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/summary_person_tag"
        android:layout_below="@+id/task_id"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fault_description_tag"
        android:textColor="@color/text_color"
        android:text="@string/summary_person"
        android:layout_marginBottom="6dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/summary_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/summary_person_tag"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/summary_person_tag"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/equipment_name_tag"
        android:layout_below="@+id/summary_person"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fault_description_tag"
        android:textColor="@color/text_color"
        android:text="@string/equipment_name"
        android:layout_marginBottom="6dp"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/equipment_name_tag"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/equipment_name_tag"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/fault_type_tag"
        android:layout_below="@+id/equipment_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fault_description_tag"
        android:textColor="@color/text_color"
        android:text="@string/fault_type"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/fault_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_alignTop="@+id/fault_type_tag"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/fault_type_tag"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fault_type"
        android:id="@+id/fault_description_tag"
        android:layout_marginLeft="15dp"
        android:textColor="@color/text_color"
        android:text="@string/fault_description"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignTop="@+id/fault_description_tag"
        android:textColor="@color/text_color"
        android:layout_marginLeft="10dp"
        android:id="@+id/fault_description"
        android:layout_toRightOf="@+id/fault_description_tag"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/fault_description_tag"
        android:layout_below="@+id/fault_description"
        android:id="@+id/repair_status_tag"
        android:textColor="@color/text_color"
        android:text="@string/repair_status"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignTop="@+id/repair_status_tag"
        android:textColor="@color/text_color"
        android:id="@+id/repair_status"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/repair_status_tag"/>
</RelativeLayout>