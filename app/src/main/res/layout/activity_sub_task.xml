<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include layout="@layout/toolbar"
       android:id="@+id/toolbar"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/two">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:id="@+id/task_number_tag"
            android:textColor="@color/black"
            android:text="@string/task_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:id="@+id/task_number"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/task_number_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_type_tag"
            android:textSize="17sp"
            android:layout_below="@+id/task_number_tag"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@+id/task_number_tag"
            android:textColor="@color/black"
            android:text="@string/group_type"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_type"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:singleLine="true"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@id/group_type_tag"
            android:layout_alignTop="@+id/group_type_tag"/>

</RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_below="@id/two"
        android:background="#DFDFDF"
        android:id="@+id/vvvvvv"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bbb"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_sub_task"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="10dp"
                android:src="@mipmap/add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:text="@string/add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/footer_toolbar"
            android:layout_marginBottom="0dp"
            android:visibility="gone">
        <include layout="@layout/footer_toolbar"
            />
        </LinearLayout>
    </LinearLayout>
<com.handmark.pulltorefresh.library.PullToRefreshListView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/vvvvvv"
android:layout_above="@id/bbb"
android:layout_marginBottom="5dp"
android:id="@+id/sub_task_list">
</com.handmark.pulltorefresh.library.PullToRefreshListView>
</RelativeLayout>