<?xml version="1.0" encoding="utf-8"?>
<com.emms.ui.CustomDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:drop="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_page"
    android:background="#00000000"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<include layout="@layout/toolbar"
    android:id="@+id/toolbar"></include>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_below="@+id/toolbar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_tag"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/fault_type"
        android:textSize="20sp"/>
  <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/type_tag"

        android:text="bbbbb"
        android:layout_toRightOf="@+id/type_tag"
        android:textSize="20sp"/>
        -->
    <com.emms.ui.DropEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/type_tag"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/type"
        android:layout_alignTop="@id/type_tag"
        drop:dropMode="flow_parent"
        drop:hint="@string/select"
        drop:hintColor="@color/hint_color"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/fault_description"
    android:layout_below="@+id/type"
    android:layout_marginTop="15dp"
    android:id="@+id/description_tag"
    android:textSize="20sp"
    android:layout_alignLeft="@+id/type_tag"/>
    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/description_tag"
        android:layout_alignTop="@+id/description_tag"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repair_status"
        android:layout_below="@+id/description"
        android:layout_marginTop="15dp"
        android:id="@+id/status_tag"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/type_tag"/>
    <EditText
        android:id="@+id/repair_status"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/status_tag"
        android:layout_alignTop="@+id/status_tag"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/description"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/content">
        <Button
            android:layout_width="match_parent"
            android:id="@+id/comfirm"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="#FCC900"
            android:gravity="center"
            android:text="@string/sure"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/footer_toolbar"
            android:visibility="gone"
            android:layout_alignParentBottom="true">
            <include layout="@layout/footer_toolbar"></include>
        </RelativeLayout>
    </RelativeLayout>
        </RelativeLayout>
        </FrameLayout>
    <include layout="@layout/activity_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"/>
</com.emms.ui.CustomDrawerLayout>