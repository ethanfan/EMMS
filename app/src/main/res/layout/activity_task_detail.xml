    xmlns:drop="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/toolbar"/>
    <ScrollView
        android:id="@+id/scrollview_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:orientation="vertical">
            <include layout="@layout/deatils_record"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layerType="software"
                android:background="@drawable/dashedline"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:textColor="@color/text_color"
                    android:text="@string/device_count"
                    android:id="@+id/textView17" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_toRightOf="@+id/textView17"
                    android:id="@+id/device_count" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:padding="5dp"

                    android:textColor="@color/text_color"
                    android:text="@string/dealed_count"
                    android:id="@+id/textView18"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/deal_count"
                    android:layout_toStartOf="@+id/deal_count" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/text_color"
                    android:text="0"
                    android:layout_marginRight="15dp"
                    android:id="@+id/deal_count"
                    android:layout_marginEnd="15dp"
                    android:layout_alignTop="@+id/textView18"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <com.emms.ui.ScrollViewWithListView
                    android:layout_below="@id/deal_count"
                    android:id="@+id/problem_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.emms.ui.ScrollViewWithListView>
                <LinearLayout
                    android:id="@+id/line"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/problem_count"
                    android:layout_width="match_parent"
                    android:background="@color/hint_color"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                </LinearLayout>
                <TextView
                    android:layout_below="@id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:layout_marginTop="8dp"
                    android:textSize="17sp"
                    android:textColor="@color/text_color"
                    android:text="@string/task_picture"
                    android:id="@+id/textView19" />
                <com.emms.ui.ExpandGridView
                    android:id="@+id/picture_containt"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:horizontalSpacing="3dp"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp"
                    android:layout_alignTop="@+id/textView19"
                    android:layout_toRightOf="@+id/textView19"
                    android:layout_toEndOf="@+id/textView19">
                </com.emms.ui.ExpandGridView>

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/picture_containt"
                    android:layout_width="match_parent"
                    android:background="@color/hint_color"
                    android:layout_height="0.5dp"
                    android:orientation="horizontal">
                </LinearLayout>
