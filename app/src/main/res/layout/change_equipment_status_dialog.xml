<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drop="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
  >
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_normal"
        android:gravity="center"
        android:textColor="#FF000000"
        android:text="@string/cancel"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:id="@+id/cancle"
        android:layout_alignParentBottom="true"
        />
         <View
             android:layout_width="wrap_content"
             android:layout_height="5dp"
             android:id="@+id/bbb"
             android:background="#00000000"
             android:layout_marginBottom="5dp"
             android:layout_above="@+id/cancle"></View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tag2"
        android:layout_above="@+id/bbb"
        android:background="#00000000"
       >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equipment_resume"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#a8283c"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:text="@string/resume"
            android:gravity="center"
            android:background="@drawable/bg_edit_normal"
            android:layout_alignParentBottom="true"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equipment_complete"
            android:textSize="20sp"
            android:textColor="#a8283c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/bg_edit_normal"
            android:text="@string/complete"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/equipment_resume"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quit"
            android:textSize="20sp"
            android:textColor="#a8283c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/bg_edit_normal"
            android:text="@string/quit"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/equipment_complete"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/material_requisition"
            android:textSize="20sp"
            android:textColor="#a8283c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/bg_edit_normal"
            android:text="@string/material_requisition"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/quit"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equipment_wait_material"
            android:textSize="20sp"
            android:textColor="#a8283c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/bg_edit_normal"
            android:text="@string/wait_material"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/material_requisition"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equipment_pause"
            android:text="@string/pause"
            android:textColor="#a8283c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/bg_edit_normal"
            android:layout_above="@+id/equipment_wait_material"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equipment_start"
            android:text="@string/start"
            android:textColor="#a8283c"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/bg_edit_normal"
            android:layout_above="@+id/equipment_pause"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/equipment_start">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/change_equipment_operator_status"
            android:text="@string/change_equipment_operator_status"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_edit_normal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/change_equipment_status"
            android:id="@+id/change_equipment_status"
            android:background="@drawable/bg_edit_normal"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_toRightOf="@+id/change_equipment_operator_status"
            android:textSize="20sp"/>
    </LinearLayout>
    </RelativeLayout>


</RelativeLayout>