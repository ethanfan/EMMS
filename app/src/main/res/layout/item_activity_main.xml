<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/repair_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:id="@+id/model_image"
                android:src="@mipmap/mainactivity_repair" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/model_name"
                android:layout_height="wrap_content"
                android:text="@string/repair_tag"
                android:textColor="@color/text_color"
                android:layout_below="@+id/model_image"
                android:layout_centerHorizontal="true"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/esquel_red"
                android:layout_alignBottom="@+id/model_image"
                android:layout_marginBottom="12dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/task_num"
                android:text="adsf"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>