<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/name_tag"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="5dp"
       android:text="@string/UserName"
       android:textColor="@color/text_color"
       android:textSize="17sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignTop="@+id/name_tag"
        android:textColor="@color/text_color"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/name_tag"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/workload_value_tag"
        android:textColor="@color/text_color"
        android:layout_toLeftOf="@+id/workload_value"
        android:text="@string/workload"
        android:textSize="17sp"
        android:layout_alignTop="@+id/workload_value"/>
    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/workload_value"
        android:textColor="@color/text_color"
        android:layout_alignParentRight="true"
        android:textSize="17sp"
        android:layout_alignTop="@+id/name_tag"
        />
</RelativeLayout>