        <TextView
            android:id="@+id/id_Warranty_time_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/repair_time"
            android:textColor="@color/text_color"
            android:layout_below="@+id/Warranty_person_tag"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_Warranty_time_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/id_Warranty_time_description"
            android:layout_toRightOf="@+id/id_Warranty_time_description"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/id_start_time_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/start_time"
            android:textColor="@color/text_color"
            android:layout_below="@+id/id_Warranty_time_description"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_start_time_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/id_start_time_description"
            android:layout_toRightOf="@+id/id_start_time_description"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/id_end_time_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/end_time"
            android:textColor="@color/text_color"
            android:layout_below="@+id/id_start_time_description"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_end_time_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/id_end_time_description"
            android:layout_toRightOf="@+id/id_end_time_description"
            android:textSize="17sp"/>


        <TextView
            android:id="@+id/id_task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/task_descripbe"
            android:textColor="@color/text_color"
            android:layout_below="@+id/id_end_time_description"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_task_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/id_task_description"
            android:layout_toRightOf="@+id/id_task_description"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/standard_workload_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/standardWorkTime"
            android:textColor="@color/text_color"
            android:layout_below="@+id/tv_task_describe"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/standard_workload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:textColor="@color/order_color"
            android:layout_alignTop="@+id/standard_workload_tag"
            android:layout_toRightOf="@+id/standard_workload_tag"
            android:textSize="17sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/standard_workload"
            android:id="@+id/layout_standard_workload"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/verifyWorkTime"
                android:textSize="17sp"
                android:textColor="@color/text_color"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dip"
                android:gravity="center_vertical"
                android:layout_weight="3"
                android:background="@color/white"
                android:layout_below="@+id/simple_description">
                <EditText
                    android:id="@+id/verify_workTime"
                    android:layout_width="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:digits="1234567890."
                    android:background="@drawable/bg_edit_normal"
                    android:hint="@string/pleaseInput"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="17sp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/layout_standard_workload"
            android:id="@+id/layout_standard_workload_remark"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/verifyWorkTimeRemark"
                android:textSize="17sp"
                android:textColor="@color/text_color"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="3"
                android:background="@color/white"
                android:layout_below="@+id/simple_description">
                <EditText
                    android:id="@+id/verify_workTime_remark"
                    android:layout_width="match_parent"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/bg_edit_normal"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:scrollHorizontally="false"
                    android:gravity="center_vertical"
                    android:hint="@string/pleaseInput"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="17sp"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="65dip"
            android:layout_height="65dip"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/image"
            android:layout_alignTop="@+id/id_Warranty_time_description"
            android:src="@mipmap/select_normal"/>
    </RelativeLayout>
</RelativeLayout>