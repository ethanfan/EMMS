<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:background="@drawable/item_click">

        <TextView
            android:id="@+id/task_id_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:text="@string/task_id"
            android:layout_toRightOf="@+id/sequence_number"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/task_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/task_id_tag"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/task_id_tag"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/fault_type_tag"
            android:layout_below="@+id/task_id_tag"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/task_id_tag"
            android:textColor="@color/text_color"
            android:text="@string/fault_type"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/fault_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/fault_type_tag"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/fault_type_tag"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/equipment_name_tag"
            android:layout_below="@+id/fault_type"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fault_type_tag"
            android:textColor="@color/text_color"
            android:text="@string/equipment_name"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/equipment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/equipment_name_tag"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@id/equipment_name_tag"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/summary_person_tag"
            android:layout_below="@+id/equipment_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fault_type_tag"
            android:textColor="@color/text_color"
            android:text="@string/summary_person"
            android:layout_marginBottom="6dp"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/summary_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/summary_person_tag"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/summary_person_tag"
            android:layout_marginBottom="6dp"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#DFDFDF"
            android:gravity="center"
            android:textSize="17sp"
            android:id="@+id/sequence_number"
            />

</RelativeLayout>
</RelativeLayout>