<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:drop="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:background="@drawable/item_click"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/measure_point_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sequence_number"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color"
            android:text="@string/measure_point_name"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/measure_point_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/measure_point_name_tag"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/measure_point_content_tag"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/measure_point_content"
            android:textColor="@color/text_color"
            android:layout_alignRight="@+id/measure_point_name_tag"
            android:layout_below="@+id/measure_point_name_tag"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/measure_point_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="17sp"
            android:layout_alignTop="@+id/measure_point_content_tag"
            android:layout_toRightOf="@+id/measure_point_content_tag" />
        <TextView
            android:id="@+id/measure_point_standard_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/measure_point_standard"
            android:textColor="@color/text_color"
            android:layout_below="@+id/measure_point_content"
            android:layout_alignRight="@+id/measure_point_content_tag"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/measure_point_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/measure_point_standard_tag"
            android:layout_toRightOf="@+id/measure_point_standard_tag"
            android:textSize="17sp"/>

