<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:background="@drawable/item_click"
        android:paddingBottom="6dp">
        <TextView
            android:id="@+id/measure_id_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sequence_number"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color"
            android:text="@string/measure_point_id"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/measure_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@id/measure_id_tag"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/measure_point_name_tag"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/measure_point_name"
            android:textColor="@color/text_color"
            android:layout_alignRight="@+id/measure_id_tag"
            android:layout_below="@+id/measure_id_tag"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/measure_point_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="17sp"
            android:layout_alignTop="@+id/measure_point_name_tag"
            android:layout_toRightOf="@+id/measure_point_name_tag" />
        <TextView
            android:id="@+id/measure_point_type_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/measure_point_type"
            android:textColor="@color/text_color"
            android:layout_below="@+id/measure_point_name_tag"
            android:layout_alignRight="@+id/measure_id_tag"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/measure_point_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/measure_point_type_tag"
            android:layout_toRightOf="@+id/measure_point_type_tag"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/measure_point_unit_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/measure_point_unit"
            android:textColor="@color/text_color"
            android:layout_below="@+id/measure_point_type_tag"
            android:layout_alignRight="@+id/measure_id_tag"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/measure_point_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/measure_point_unit_tag"
            android:layout_toRightOf="@+id/measure_point_unit_tag"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/measure_point_status_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/measure_point_status"
            android:layout_alignTop="@+id/measure_point_status"
            android:text="@string/measure_point_status"
            android:textColor="@color/text_color"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/measure_point_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/order_color"
            android:layout_alignTop="@+id/measure_id_tag"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/measure_point_result_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/measure_point_result"
            android:textColor="@color/text_color"
            android:layout_below="@+id/measure_point_unit_tag"
            android:layout_alignRight="@+id/measure_id_tag"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/measure_point_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/measure_point_result_tag"
            android:layout_toRightOf="@+id/measure_point_result_tag"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="#DFDFDF"
            android:gravity="center"
            android:textSize="17sp"
            android:id="@+id/sequence_number"
            />
    </RelativeLayout>
</RelativeLayout>