                    <!--android:layout_gravity="center_vertical"/>-->
                <com.emms.ui.DropEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_edit_normal"
                    drop:drawableRight="@mipmap/drop_down"
                    drop:dropMode="flow_parent"
                    drop:hint="@string/pleaseInput"
                    drop:hintColor="@color/hint_color"
                    android:id="@+id/MeasureValueStandard"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/MeasureValueSelect_tag"
                    android:text="@string/MeasureValue"/>
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@color/text_color"-->
                    <!--android:textSize="17sp"-->
                    <!--android:id="@+id/result_text"-->
                    <!--android:visibility="gone"-->
                    <!--android:layout_gravity="center_vertical"/>-->
                <com.emms.ui.DropEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    drop:drawableRight="@mipmap/drop_down"
                    drop:dropMode="flow_parent"
                    drop:hint="@string/pleaseInput"
                    drop:hintColor="@color/hint_color"
                    android:visibility="gone"
                    android:id="@+id/MeasureValueSelect"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@drawable/bg_edit_normal"-->
                    <!--android:padding="8dp"-->
                    <!--android:textColor="@color/text_color"-->
                    <!--android:text="正常"/>-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@drawable/bg_edit_normal"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:textColor="@color/text_color"-->
                    <!--android:padding="8dp"-->
                    <!--android:text="无法检测"/>-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@drawable/bg_edit_normal"-->
                    <!--android:padding="8dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:textColor="@color/text_color"-->
                    <!--android:text="异常"/>-->
                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ObPointValueList"
                        android:numColumns="3"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/bg_edit_normal"-->
                <!--android:paddingTop="8dp"-->
                <!--android:paddingBottom="8dp"-->
                <!--android:paddingLeft="5dp"-->
                <!--android:layout_marginRight="50dp"-->
                <!--android:hint="@string/pleaseInput"-->
                <!--android:id="@+id/MeasureValueInput"-->
                <!--android:textColorHint="@color/hint_color"-->
                <!--android:visibility="gone"/>-->
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MeasureValueInputLayout"
            android:layout_alignLeft="@+id/MeasureValueInputLayout"
            android:layout_toLeftOf="@+id/imageLayout"
            android:orientation="horizontal"
            android:id="@+id/MeasureStateInputLayout"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:text="@string/StateValue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="17sp"
                android:id="@+id/state_text"
                android:visibility="gone"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_normal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp"
                android:hint="@string/pleaseInput"
                android:id="@+id/StateValueInput"
                android:textColorHint="@color/hint_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/measure_point_content_tag"
            android:layout_alignBottom="@+id/MeasureValueInputLayout"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:id="@+id/imageLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/image"
            android:src="@mipmap/select_normal"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>